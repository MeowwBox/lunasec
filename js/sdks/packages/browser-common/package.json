{
  "name": "@lunasec/browser-common",
  "version": "1.0.0",
  "description": "Base lunasec package",
  "main": "build/main/index.js",
  "typings": "build/main/index.d.ts",
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--loader=ts-node/esm"
    ]
  },
  "scripts": {
    "clean": "rm -rf build",
    "compile": "tsc -p tsconfig.json",
    "build:main": "tsc -p tsconfig.json",
    "test": "jest",
    "test:tap": "jest --json 2>/dev/null | jest-json-to-tap"
  },
  "types": "build/main/index.d.ts",
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^14.11.8",
    "@types/sinon": "^10.0.2",
    "jest": "^27.0.4",
    "jest-json-to-tap": "^2.1.0",
    "sinon": "^11.1.1",
    "ts-jest": "^27.0.3",
    "ts-node": "^10.0.0",
    "typed-rest-client": "^1.8.4",
    "typescript": "^4.2.0"
  },
  "dependencies": {
    "react-dom": "^17.0.2"
  }
}
